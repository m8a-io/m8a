{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true
  }
}
