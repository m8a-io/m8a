{
  "name": "@m8a/cli",
  "version": "0.0.11",
  "description": "A CLI for working with m8a",
  "keywords": [
    "platform",
    "PaaS",
    "SaaS",
    "TypeScript"
  ],
  "license": "MIT",
  "author": "Scott Molinari <scott.molinari@m8a.io>",
  "bin": {
    "m8a": "./dist/main.js"
  },
  "scripts": {
    "_phase:build": "pnpm prebuild && swc src -d dist --config-file .build.swcrc",
    "_phase:test": "jest",
    "prebuild": "rimraf dist",
    "build": "pnpm prebuild && swc src -d dist --config-file .build.swcrc",
    "dev": "pnpm prebuild && swc src -d dist --config-file .build.swcrc -w",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint --fix ./",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@m8a/logger": "workspace:*",
    "@microsoft/rush-lib": "5.112.2",
    "@nestjs/common": "10.3.1",
    "@nestjs/event-emitter": "2.0.3",
    "cross-spawn": "7.0.3",
    "dag-map": "~2.0.2",
    "nest-commander": "3.12.5",
    "tree-kill": "1.2.2"
  },
  "devDependencies": {
    "@m8a/eslint-config": "workspace:*",
    "@nestjs/cli": "10.3.0",
    "@nestjs/core": "10.3.1",
    "@nestjs/testing": "10.3.1",
    "@rushstack/eslint-config": "3.6.1",
    "@swc/cli": "~0.3.0",
    "@swc/core": "~1.3.84",
    "@types/cross-spawn": "6.0.6",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.6",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "prettier": "3.2.4",
    "reflect-metadata": "0.2.1",
    "rimraf": "~5.0.0",
    "rxjs": "7.8.1",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3",
    "webpack": "5.90.0"
  }
}
